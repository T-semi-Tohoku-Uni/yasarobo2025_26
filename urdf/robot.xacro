      </surface>
    </gazebo>
  </link>

  <!-- chassis_unit_v12_3 -->
  <link name="chassis_unit_v12_3">
    <inertial>
      <origin xyz="-0.0016124325639870207 -0.03749323384290623 -0.02614268691534118" rpy="0 0 0"/>
      <mass value="0.9094540640488471"/>
      <inertia
