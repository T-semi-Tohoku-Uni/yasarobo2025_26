        </friction>
      </surface>
    </gazebo>
  </link>

  <!-- alm_1_v3_1 -->
  <link name="alm_1_v3_1">
    <inertial>
      <origin xyz="-0.051961049228441504 0.029999999552957693 0.004999999999999994" rpy="0 0 0"/>
      <mass value="0.01316675074543267"/>
      <inertia
