        <friction>
          <ode>
            <mu>1.0</mu>
            <mu2>1.0</mu2>
          </ode>
        </friction>
      </surface>
    </gazebo>
  </link>

  <!-- chassis_unit_v12_2 -->
  <link name="chassis_unit_v12_2">
    <inertial>
      <origin xyz="-0.03166397328252324 0.005142858085078819 -0.0261426869153411" rpy="0 0 0"/>
      <mass value="0.9094540640488471"/>
      <inertia
        ixx="0.000711"
        iyy="0.000486"
        izz="0.000788"
        ixy="-0.000195"
        iyz="-0.000052"
        ixz="-0.000030"/>
    </inertial>
    <visual>
      <origin xyz="-0.0 -0.06 0.005" rpy="0 0 0"/>
