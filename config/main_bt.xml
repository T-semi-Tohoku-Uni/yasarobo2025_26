<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4"
      main_tree_to_execute="MainBT">
  <BehaviorTree ID="MainBT">
    <Sequence>
      <Sequence>
        <generate_route x="0.3"
                        y="2.2"/>
        <follow_route/>
        <rotate theta="3.14"/>
        <rotate theta="0"/>
      </Sequence>
      <KeepRunningUntilFailure>
        <Sequence>
          <generate_route x="1.34"
                          y="1.8"/>
          <follow_route/>
          <rotate theta="-1.57"/>
          <rotate theta="1.57"/>
          <generate_route x="0.3"
                          y="2.0"/>
          <follow_route/>
          <rotate theta="0"/>
        </Sequence>
      </KeepRunningUntilFailure>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="follow_route"
            editable="true"/>
    <Action ID="generate_route"
            editable="true">
      <input_port name="x">TODO</input_port>
      <input_port name="y">TODO</input_port>
    </Action>
    <Action ID="rotate"
            editable="true">
      <input_port name="theta"/>
    </Action>
  </TreeNodesModel>

</root>
